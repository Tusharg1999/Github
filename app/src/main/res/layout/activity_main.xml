<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakground_gradient"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/github_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_for_github_account"
        android:layout_below="@id/logo"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/text_logo"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_res"
        android:layout_below="@id/text_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:id="@+id/text_editor"
        android:hint="Enter User Name To search"
        android:gravity="center"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_editor"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_back"
        android:padding="10dp"
        android:id="@+id/submit_button"
        android:textColor="#fff"
        android:text="Search"/>

</RelativeLayout>